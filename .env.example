# Example .env for local development
# Use these values or copy to a local .env file and adapt them.

# Django
DEBUG=True
USE_CORS=True

# If you want to restrict CORS to specific origins (recommended when using credentials):
# Provide comma-separated origins, e.g. http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOWED_ORIGINS=

# Database (example using local Postgres)
# You can use dj-database-url format, e.g. postgres://user:pass@localhost:5432/dbname
DATABASE_URL=postgres://postgres:9638660@localhost:5432/boutique2

# Cloudinary (optional). If you don't set these, the project will store media locally under ./media
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Other optional envs
SECRET_KEY='replace-this-with-a-secret-in-production'

# Example: reduce token lifetimes for local testing
# ACCESS_TOKEN_LIFETIME_MINUTES=120
# REFRESH_TOKEN_LIFETIME_DAYS=7
